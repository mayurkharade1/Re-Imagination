	@Test
	public void LeadCreate() throws InterruptedException, IOException {	
		//Lc.login();
		
		LeadCreationA Lc = new LeadCreationA(driver);
		while(Lc.n) {	
	
//	try{
		Lc.selectScenario();
		Lc.clickOnLeadCreationMenu();
